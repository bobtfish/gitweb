<%args>
$project
$revs
$heads
</%args>

<%def .rev_link>
<%args>
$project
$rev
$action
</%args>
<a href="<% $c->uri_for('/project', $project, 'rev', $rev, $action) %>"><% $action %></a>
</%def>

<dl>
% for my $prop (qw/description owner last_change/) { #TODO: url
	<dt><% $prop %></dt>
	<dd><% $project->{$prop} || 'none' %></dd>
% }
</dl>

<h2>shortlog</h2>

<& /project/shortlog, revs => $revs &>

<h2>heads</h2>

<table>
% for my $head (@{$heads}) {
	<tr>
		<td><& /common/format_last_change, time => $head->{last_change} &></td>
		<td><% $head->{name} %></td>
		<td><& /common/rev_link, rev => $head->{rev}, action => 'shortlog' &></td>
		<td><& /common/rev_link, rev => $head->{rev}, action => 'log'      &></td>
	</tr>
% }
</table>
