<%args>
$revs
</%args>

<%def .shortlog_nav>
% my $page = $c->stash->{page};
<ul>
<li><a href="<% $c->request->uri_with({ page => 0 }) %>">HEAD</a></li>
<li>
% if ($page > 0) {
<a href="<% $c->request->uri_with({ page => $page - 1 }) %>">
% }
prev
% if ($page > 0) {
</a>
% }
</li>
<li><a href="<% $c->request->uri_with({ page => $page + 1 }) %>">next</a></li>
</ul>
</%def>

% if (scalar @{$revs}) {
<& .shortlog_nav &>
<table>
% 	for my $rev (@{$revs}) {
	<tr>
		<td><& /common/format_last_change, time => $rev->{author_datetime} &></td>
		<td><% $rev->{author_name} || $rev->{author} %></td>
		<td><% $rev->{message} %></td>
		<td><& /common/rev_link, rev => $rev->{rev}, action => 'commit'     &></td>
		<td><& /common/rev_link, rev => $rev->{rev}, action => 'commitdiff' &></td>
		<td><& /common/rev_link, rev => $rev->{rev}, action => 'snapshot'   &></td>
	</tr>
% 	}
</table>
<& .shortlog_nav &>
% }
